@* @model Data.Models.Order *@
@model Data.Models.GHN.GhnOrderDetailResponse

@{
    ViewData["Title"] = "Order Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        .containerDetail {
            max-width: 800px;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h5 {
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .table thead th {
            background-color: #f8f9fa;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
        }

        .btn-save {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
        }

            .btn-save:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-danger" style="background-color: #28a745; color: white;">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="containerDetail">
        <h5>User Information</h5>
        <form id="orderForm" asp-controller="Order" asp-action="UpdateOrderDetails" method="post">
            <input type="hidden" name="OrderCodeGHN" value="@Model.OrderCode" />

            <div class="row">
                <div class="col-md-4">
                    <label>User Name</label>
                    <input type="text" name="FullName" class="form-control change-detect" value="@Model.ToName">
                </div>
                <div class="col-md-4">
                    <label>Phone Number</label>
                    <input type="text" name="PhoneNumber" class="form-control change-detect" value="@Model.ToPhone">
                </div>
            </div>
            <div>
                <label>Address</label>
                <input type="text" name="Address" class="form-control change-detect" value="@Model.ToAddress">
            </div>

            <h5>Product</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="hidden" name="Items[@i].Name" value="@Model.Items[i].Name" />
                                @Model.Items[i].Name
                            </td>
                            <td>
                                <input type="number" name="Items[@i].Quantity" class="form-control change-detect"
                                       value="@Model.Items[i].Quantity" min="1">
                            </td>
                            <td>@Model.Items[i].Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h5>Order</h5>
            <div class="row">
                <div class="col-md-6">
                    <label>Status</label>
                    @* <select class="form-control change-detect" name="OrderStatusId"> *@
                    @*     <option value="1" selected="@(Model.OrderStatusId == 1 ? "selected" : null)">Pending Confirmation</option> *@
                    @*     <option value="2" selected="@(Model.OrderStatusId == 2 ? "selected" : null)">Confirmed</option> *@
                    @*     <option value="3" selected="@(Model.OrderStatusId == 3 ? "selected" : null)">Shipped</option> *@
                    @*     <option value="4" selected="@(Model.OrderStatusId == 4 ? "selected" : null)">Delivered</option> *@
                    @*     <option value="5" selected="@(Model.OrderStatusId == 5 ? "selected" : null)">Cancelled</option> *@
                    @*     <option value="6" selected="@(Model.OrderStatusId == 6 ? "selected" : null)">Returned</option> *@
                    @* </select> *@
                    <div class="form-control" readonly style="background-color: white;">@Model.Status</div>
                </div>
                @* <div class="col-md-6"> *@
                @*     <label>Payment Method</label> *@
                @*     <div class="form-control" readonly>@Model.PaymentMethod</div> *@
                @* </div> *@
            </div>
            <div>
                <label>Notes</label>
                <textarea name="Note" class="form-control change-detect">@Model.Note</textarea>
            </div>

            <div class="btn-container">
                <a href="#" id="btnBack" class="btn btn-back">Back to Orders</a>
                <button type="submit" id="btnSave" class="btn btn-save">Save Change</button>
            </div>
        </form>
    </div>

    <script>
        let isChanged = false;

        document.querySelectorAll(".change-detect").forEach(input => {
            input.addEventListener("input", () => {
                isChanged = true;
            });
        });

        document.getElementById("btnSave").addEventListener("click", function(event) {
            if (isChanged) {
                let confirmSave = confirm("Bạn có chắc muốn thay đổi dữ liệu?");
                if (!confirmSave) {
                    event.preventDefault();
                }
            }
        });

        document.getElementById("btnBack").addEventListener("click", function(event) {
            if (isChanged) {
                let confirmBack = confirm("Thông tin thay đổi chưa được lưu, bạn có muốn rời khỏi?");
                if (!confirmBack) {
                    event.preventDefault();
                } else {
                    window.location.href = "/Order/OrderList";
                }
            } else {
                window.location.href = "/Order/OrderList";
            }
        });

    </script>
</body>
</html>
