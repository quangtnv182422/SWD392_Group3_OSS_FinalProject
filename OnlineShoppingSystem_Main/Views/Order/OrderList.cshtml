<body>

    <h1>Order information</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-danger" style="background-color: #28a745; color: white;">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-controller="Order" asp-action="OrderList" method="get">
        <input type="text" name="orderCode" placeholder="Nhập mã đơn hàng..." required />
        <button type="submit">Tra cứu</button>
    </form>
    

    @if (Model == null)
    {
        <p class="text-danger">Lỗi: Dữ liệu đơn hàng không được tải lên.</p>
    }
    else if (!Model.Any())
    {
        <p class="text-warning mt-3">Bạn chưa có đơn hàng nào.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Order Code</th>
                    <th>Receiver</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Note</th>
                    <th>Total Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@(order.OrderCode ?? "[Không có mã]")</td>
                        <td>@(order.ToName ?? "[Không có tên]")</td>
                        <td>@(order.ToPhone ?? "[Không có số điện thoại]")</td>
                        <td>@(order.ToAddress ?? "[Không có địa chỉ]")</td>
                        <td><span class="badge bg-info text-dark">@(order.Status ?? "Chưa xác định")</span></td>
                        <td>@(order.Note ?? "[Không có ghi chú]")</td>
                        <td>@(order.Items != null ? order.Items.Sum(i => i.Price * i.Quantity).ToString("N0") + " VND" : "0 VND")</td>
                        <td>
                            @* <a asp-controller="Order" asp-action="OrderDetails" asp-route-orderCode="@order.OrderCode"> *@
                            @*     <i class="fas fa-eye"></i> *@
                            @* </a> *@

                            @if (order.Status == "ready_to_pick")
                            {
                                <form id="cancelForm-@order.OrderCode" asp-controller="Order" asp-action="CancelOrder" method="post" style="display:inline;">
                                    <input type="hidden" name="orderCode" value="@order.OrderCode" />
                                    <button type="button" class="delete-button delete-order" data-order-code="@order.OrderCode">
                                        <i class="fas fa-trash red-icon"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>

                    <!-- Bảng hiển thị danh sách sản phẩm -->
                    @if (order.Items != null && order.Items.Any())
                    {
                        <tr>
                            <td colspan="8">
                                <table class="table table-bordered mt-2">
                                    <thead>
                                        <tr>
                                            <th>Product Name</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.Items)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Price.ToString("N0") VND</td>
                                                <td>@($"{item.Price * item.Quantity:N0} VND")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    }

