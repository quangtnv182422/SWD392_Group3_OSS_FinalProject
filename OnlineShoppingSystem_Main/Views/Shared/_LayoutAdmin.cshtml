@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico.png">

    <!-- Bootstrap -->
    <link href="~/assets1/" rel="stylesheet" />
    <link href="~/assets1/css/simplebar.css" rel="stylesheet" />
    <link href="~/assets1/css/select2.min.css" rel="stylesheet" />
    <link href="~/assets1/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/assets1/css/remixicon.css" rel="stylesheet" />
    <link href="~/assets1/css/tiny-slider.css" rel="stylesheet" />
    <link href="~/assets1/css/style.min.css" rel="stylesheet" id="theme-opt" />
</head>
<body>

    <div class="page-wrapper doctris-theme toggled">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content" data-simplebar>
                <div class="sidebar-brand">
                    <a href="@Url.Action("Index", "Admin")">
                        <img src="~/assets/images/favicon.ico.png" height="24" alt="">
                    </a>
                </div>
                <ul class="sidebar-menu pt-3">
                    <li><a href="@Url.Action("Index", "Admin")"><i class="uil uil-dashboard me-2"></i>Dashboard</a></li>
                    <li><a href="@Url.Action("Index", "Appointment")"><i class="uil uil-stethoscope me-2"></i>Appointments</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="page-content bg-light">
            <div class="top-header">
                <div class="header-bar d-flex justify-content-between border-bottom">
                    <div class="d-flex align-items-center">
                        <a id="close-sidebar" class="btn btn-icon btn-soft-primary ms-2" href="#">
                            <i class="uil uil-bars"></i>
                        </a>
                    </div>

                    <ul class="list-unstyled mb-0">
                        <li class="list-inline-item mb-0 ms-1">
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-icon btn-soft-danger">
                                <i class="uil uil-sign-out-alt"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="container-fluid">
                <div class="layout-specing">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="bg-white shadow py-3">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col">
                            <p class="mb-0 text-muted">&copy; @DateTime.Now.Year - Admin Dashboard</p>
                        </div>
                    </div>
                </div>
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/assets1/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets1/js/simplebar.min.js"></script>
    <script src="~/assets1/js/apexcharts.min.js"></script>
    <script src="~/assets1/js/app.js"></script>

</body>
</html>
